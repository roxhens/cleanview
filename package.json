{
  "name": "cleanview",
  "displayName": "CleanView",
  "description": "Hide files matching .gitignore patterns from VS Code Explorer for a cleaner workspace.",
  "version": "1.0.0",
  "publisher": "roxhens",
  "author": "Roxhens Meraj",
  "license": "MIT",
  "homepage": "https://github.com/cleanview/cleanview",
  "repository": {
    "type": "git",
    "url": "https://github.com/cleanview/cleanview"
  },
  "bugs": {
    "url": "https://github.com/cleanview/cleanview/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "keywords": [
    "gitignore",
    "hide",
    "explorer",
    "files",
    "exclude",
    "clean",
    "workspace"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cleanview.toggle",
        "title": "Toggle Hide Gitignored Files",
        "category": "CleanView"
      },
      {
        "command": "cleanview.refresh",
        "title": "Refresh Gitignore Patterns",
        "category": "CleanView"
      },
      {
        "command": "cleanview.disable",
        "title": "Disable CleanView",
        "category": "CleanView"
      }
    ],
    "configuration": {
      "title": "CleanView",
      "properties": {
        "cleanview.autoHide": {
          "type": "boolean",
          "default": true,
          "description": "Automatically hide gitignored files when extension activates"
        },
        "cleanview.includeNestedGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Include patterns from nested .gitignore files"
        },
        "cleanview.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar indicator"
        },
        "cleanview.customPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional custom ignore patterns"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "ignore": "^5.3.0"
  }
}
